{
  "extends": ["../../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": "./tsconfig.json",
        "createDefaultProgram": true
      },
      "rules": {
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "stim-feature",
            "style": "kebab-case"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "stimFeature",
            "style": "camelCase"
          }
        ]
      }
    },
    {
      "files": ["*.component.html"],
      "parserOptions": {
        "project": "./tsconfig.json",
        "createDefaultProgram": true
      },
      "rules": {},
      "plugins": ["@angular-eslint/template"]
    }
  ]
}
